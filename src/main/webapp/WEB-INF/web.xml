<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>cars</display-name>
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>ru.job4j.cars.filters.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>ru.job4j.cars.AppContextListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>PostsServlet</servlet-name>
    <servlet-class>ru.job4j.cars.controllers.PostsController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PostsAjaxServlet</servlet-name>
    <servlet-class>ru.job4j.cars.controllers.PostsAjaxController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BodyTypesAjaxServlet</servlet-name>
    <servlet-class>ru.job4j.cars.controllers.BodyTypesAjaxController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CarBrandsAjaxServlet</servlet-name>
    <servlet-class>ru.job4j.cars.controllers.BrandsAjaxController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ImagesServlet</servlet-name>
    <servlet-class>ru.job4j.cars.controllers.ImagesController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginRegisterServlet</servlet-name>
    <servlet-class>ru.job4j.cars.controllers.LoginController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>ru.job4j.cars.controllers.LogoutController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>ru.job4j.cars.controllers.RegisterController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CarBrandsServlet</servlet-name>
    <servlet-class>ru.job4j.cars.controllers.BrandsController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BodyTypesServlet</servlet-name>
    <servlet-class>ru.job4j.cars.controllers.BodyTypesController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PostsServlet</servlet-name>
    <url-pattern>/posts.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PostsAjaxServlet</servlet-name>
    <url-pattern>/posts.ajax</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BodyTypesAjaxServlet</servlet-name>
    <url-pattern>/body-types.ajax</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CarBrandsAjaxServlet</servlet-name>
    <url-pattern>/car-brands.ajax</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ImagesServlet</servlet-name>
    <url-pattern>/images.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginRegisterServlet</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CarBrandsServlet</servlet-name>
    <url-pattern>/car-brands.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BodyTypesServlet</servlet-name>
    <url-pattern>/body-types.do</url-pattern>
  </servlet-mapping>
</web-app>
